<!DOCTYPE html>
<html>
  <head>
    <title>MrD</title>
    <link rel="stylesheet" type="text/css" href="./styles/menu.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>
  <body>
    <% include partials/_header %>
    <div class="row">
      <div id="catogary" class="col">
        <h2 class='side'>
        MAIN:
        </h2>
        <% for (let product of products) { %>
        <% if (product.cat_id === 1) { %>
        <div class="card">
          <img class="card-img-top" src="" alt="Card image cap">
          <div class="card-body" data-name="<%=product.name%>" data-price="<%= product.price%>">
            <h5 class="card-title"><%= product.name %></h5>
            <p class="card-text"><%= product.description %></p>
            <p class="card-text"><small class="text-muted">Price: CAN$ <%= product.price%></small></p>
            <label>Quantity: </label>
            <input  class="form-control" placeholder="Amount" name="quantity" type="text">
            <form class="add" method="POST" action="/menu">
            <button id="<%= product.id%>" type="submit" class="btn btn-primary add">Add</button>
          </form>
          </div>
        </div>
        <% } %>
        <% } %>
      </div>
      <div id="catogary" class="col">
        <section id="orderdetail" class="row">
          <div class="col">
            <div class="card-body">
              <h5 class="card-title">Order Details</h5>
              <p class="card-text">Customer Name</p>
            </div>
            <div>
              <div id="orderList_container">
              </div>
              <li class="list-group-item">Total Price: $ </li>
            <button class="delete-btn"> delete </button></li>
              <div class="card-body">
              <form action="/myorder" method="GET">
                <input id="placeOrder" class="btn btn-primary" type="submit" value="Place Order">
              </form>
              </div>
          </section>
        </div>
      </div>
    </body>
  </html>


