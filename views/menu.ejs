<!DOCTYPE html>
<html>
  <head>
    <title>MrD</title>
    <link rel="stylesheet" type="text/css" href="./styles/menu.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <% include partials/_header %>
  </head>
  <body>

    <div id="main" class="column">
      <h2 class="main"> MAIN </h2>
        <div class="container">
          <div class="row">
            <% for (let product of products) { %>
              <% if (product.cat_id === 1) { %>
              <div class="col-md-4 col-sm-6 col-xs-6">
                <div class="card-body" data-name="<%=product.name%>" data-price="<%= product.price%>">
                  <img class="foodpic" src="http://d701vexhkz032.cloudfront.net/media/images/menu-content/BR/sanduiches-de-carne/bigmac_v2.png">
                  <h5 class="card-title"><%= product.name %></h5>
                  <p class="card-text"><%= product.description %></p>
                  <p id="product_price" class="card-text"><small class="text-muted">Price: CAN$ <%= product.price%></small></p>
                  <label>Quantity: </label>
                  <input  class="form-control" placeholder="Amount" name="quantity" type="text">
                  <form class="add" method="POST" action="/menu">
                    <button id="<%= product.id%>" type="submit" class="btn btn-primary add">Add</button>
                  </form>
                </div>
              </div>
              <% } %>
            <% } %>
          </div>
        </div>

      <h2 class="sides"> SIDES </h2>
        <div class="container">
          <div class="row">
            <% for (let product of products) { %>
              <% if (product.cat_id === 2) { %>
              <div class="col-md-4 col-sm-6 col-xs-6">
              <div class="card-body" data-name="<%=product.name%>" data-price="<%= product.price%>">
                <img class="foodpic" src="http://d701vexhkz032.cloudfront.net/media/images/menu-content/BR/sanduiches-de-carne/bigmac_v2.png" alt="Card image cap">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.description %></p>
                <p class="card-text"><small class="text-muted">Price: CAN$ <%= product.price%></small></p>
                <label>Quantity: </label>
                <input  class="form-control" placeholder="Amount" name="quantity" type="text">
                <form class="add" method="POST" action="/menu">
                  <button id="<%= product.id%>" type="submit" class="btn btn-primary add">Add</button>
                </form>
              </div>
              </div>
              <% } %>
            <% } %>
          </div>
        </div>

      <h2 class="drinks"> DRINKS </h2>
        <div class="container">
          <div class="row">
            <% for (let product of products) { %>
              <% if (product.cat_id === 3) { %>
              <div class="col-md-4 col-sm-6 col-xs-6">
              <div class="card-body" data-name="<%=product.name%>" data-price="<%= product.price%>">
                <img class="foodpic" src="http://d701vexhkz032.cloudfront.net/media/images/menu-content/BR/sanduiches-de-carne/bigmac_v2.png" alt="Card image cap">
                <h5 class="card-title"><%= product.name %></h5>
                <p class="card-text"><%= product.description %></p>
                <p class="card-text"><small class="text-muted">Price: CAN$ <%= product.price%></small></p>
                <label>Quantity: </label>
                <input  class="form-control" placeholder="Amount" name="quantity" type="text">
                <form class="add" method="POST" action="/menu">
                  <button id="<%= product.id%>" type="submit" class="btn btn-primary add">Add</button>
                </form>
              </div>
              </div>
              <% } %>
            <% } %>
          </div>
        </div>
    </div>

    <div id="cart" class="column">
      <section id="orderdetail" class="row">
          <div id="orderwords">

          <div class="col">

            <div class="card-body">
              <h5 class="card-title">Order Details</h5>
              <p class="card-text">Customer Name</p>
            </div>


            <div>
              <div id="orderList_container">
              </div>

              <div id="total_price">

              </div>

              <div id="orderList_container"></div>

              <div class="card-body">
              <form action="/myorder" method="GET">
                <input id="order" class="btn btn-primary" type="submit" value="Place Order">
              </form>
              </div>
            </div>
          </div>
          </section>
        </div>
      </div>
  </body>
</html>
